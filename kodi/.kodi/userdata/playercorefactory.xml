<playercorefactory>
  <players>
    <player name="mpv" type="ExternalPlayer" audio="false" video="true">
      <filename>/usr/bin/mpv</filename>
      <args>"{1}" --fullscreen=yes</args>
      <hidexbmc>true</hidexbmc>
    </player>
    <player name="mpv-stream" type="ExternalPlayer" audio="false" video="true">
      <filename>${HOME}/.scripts/mpv-stream</filename>
      <args>"{1}"</args>
      <hidexbmc>true</hidexbmc>
    </player>
  </players>
  <rules action="prepend">
    <rule video="true" player="mpv-stream"/>
  </rules>
</playercorefactory>
